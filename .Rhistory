for(i in 1:N){
for(j in 1:i){
df$row_num[m] <- i
df$col_num[m] <- j
m <- m + 1
}
}
# compute Pascal Triangle values
df$PT_val[df$row_num == 1 & df$col_num == 1] <- 1
df$PT_val[df$row_num == 2 & df$col_num == 1] <- 1
df$PT_val[df$row_num == 2 & df$col_num == 2] <- 1
for(i in 3:N){
for(j in 1:i){
